<Window x:Class="Anime_Downloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Anime_Downloader"
        xmlns:p="clr-namespace:Anime_Downloader.Properties"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" ResizeMode="CanMinimize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF4D4D4D" MouseDown="Grid_MouseDown">

        <Label x:Name="label" Content="Anime Downloader" Margin="10,-1,0,0" VerticalAlignment="Top" Foreground="#FFB6B6B6" HorizontalAlignment="Left"/>
        <StackPanel Margin="0,0,3,0" Width="179" Orientation="Horizontal" FlowDirection="RightToLeft" HorizontalAlignment="Right" VerticalAlignment="Top" Height="25">
            <Button x:Name="CloseBtn" Content="X" HorizontalAlignment="Right" Width="20" BorderThickness="0" Margin="0,2,3,3" Background="#FF343434" Foreground="#FFB6B6B6" Click="button_Click" Padding="0" HorizontalContentAlignment="Center" Height="20"/>
            <Button x:Name="MiniBtn" Content="_" Width="20" BorderThickness="0" Margin="0,2,3,0" Background="#FF343434" Foreground="#FFB6B6B6" Padding="0" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Click="MiniBtn_Click"/>
            <Button x:Name="SettingBtn" Content="S" Width="20" BorderThickness="0" Margin="0,2,3,0" Background="#FF343434" Foreground="#FFB6B6B6" Padding="0" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Click="SettingBtn_Click"/>
        </StackPanel>
        <Label x:Name="label2" Content="uTorrent.exe Path" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top" Foreground="#FFB6B6B6"/>
        <Label x:Name="label4" Content="Torrent files folder" HorizontalAlignment="Left" Margin="10,121,0,0" VerticalAlignment="Top" Foreground="#FFB6B6B6" Height="25"/>
        <Label x:Name="label3" Content="OnGoing folder" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Foreground="#FFB6B6B6"/>
        <TextBox x:Name="uTorrentTextBox" HorizontalAlignment="Left" Height="23" Margin="118,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="397" Background="#FFB6B6B6" Padding="0,2,0,0" TextChanged="uTorrentTextBox_TextChanged"/>
        <TextBox x:Name="OnGoingTextBox" HorizontalAlignment="Left" Height="23" Margin="118,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="397" Background="#FFB6B6B6" Padding="0,2,0,0" TextChanged="OnGoingTextBox_TextChanged"/>
        <TextBox x:Name="TorrentsFolder" HorizontalAlignment="Left" Height="23" Margin="118,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="397" Background="#FFB6B6B6" Padding="0,2,0,0" TextChanged="TorrentsFolder_TextChanged"/>
        <Label x:Name="label6" Content="Refresh time" HorizontalAlignment="Left" Margin="10,149,0,0" VerticalAlignment="Top" Foreground="#FFB6B6B6" Height="25"/>
        <TextBox x:Name="RefreshTimebox" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="23" Margin="118,151,0,0" VerticalAlignment="Top" Width="53" Background="#FFB6B6B6" Padding="0,2,0,0" TextChanged="RefreshTimebox_TextChanged"/>
        <Label x:Name="label5" Content="seconds." HorizontalAlignment="Left" Margin="176,149,0,0" VerticalAlignment="Top" Foreground="#FFB6B6B6" Height="25"/>

        <ListBox x:Name="listBox" Margin="1,25" MouseDoubleClick="listBox_MouseDoubleClick">
            <ListBoxItem Content="Downloaded" IsEnabled="False" Tag="blank"/>
            <Separator IsEnabled="False" Tag="blank"/>
        </ListBox>
        <Label x:Name="CounterLabel" Content="{Binding Source={x:Static p:Settings.Default}, Path=RefreshCounter}" Foreground="#FFB6B6B6" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,3,0"/>
        <Label x:Name="status" Content="{Binding Source={x:Static p:Settings.Default}, Path=StatusLabel}" Foreground="#FFB6B6B6" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,0"/>
    </Grid>
</Window>
